<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loginas.LoginAsActivity">

  <TextView
      android:id="@+id/tv_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="150dp"
      android:textSize="25sp"
      android:textStyle="bold"
      android:text="@string/masuk_sebagai"/>

  <ImageButton
      android:id="@+id/ib_login_as_dokter"
      android:layout_width="140dp"
      android:layout_height="140dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/ib_login_as_pasien"
      android:scaleType="centerCrop"
      android:backgroundTint="@color/material_on_primary_disabled"
      android:src="@drawable/person"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/ib_login_as_dokter"
      app:layout_constraintEnd_toEndOf="@id/ib_login_as_dokter"
      app:layout_constraintTop_toBottomOf="@id/ib_login_as_dokter"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="@string/dokter"/>

  <ImageButton
      android:id="@+id/ib_login_as_pasien"
      android:layout_width="140dp"
      android:layout_height="140dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/ib_login_as_dokter"
      app:layout_constraintEnd_toEndOf="parent"
      android:scaleType="centerCrop"
      android:backgroundTint="@color/material_on_primary_disabled"
      android:src="@drawable/person"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/ib_login_as_pasien"
      app:layout_constraintEnd_toEndOf="@id/ib_login_as_pasien"
      app:layout_constraintTop_toBottomOf="@id/ib_login_as_pasien"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="@string/pasien"/>

  </androidx.constraintlayout.widget.ConstraintLayout>