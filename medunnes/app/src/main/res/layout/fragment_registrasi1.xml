<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".ui.auth.register.Registrasi1Fragment">

    <TextView
        android:id="@+id/tv_register_as_dokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/daftar_sebagai_dokter"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_form_registrasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_register_as_dokter"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_no_telepon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:text="@string/email"/>

            <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
                android:id="@+id/til_no_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_no_telepon_title"
                app:endIconMode="clear_text"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:startIconTint="@color/grey">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/masukkan_email"
                    android:inputType="textEmailAddress"/>
            </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

            <TextView
                android:id="@+id/tv_kelamin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/til_no_telepon"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:text="@string/nama_lenkap"/>

            <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
                android:id="@+id/spinner_kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_kelamin_title"
                app:endIconMode="clear_text"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:startIconTint="@color/grey">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/masukkan_nama_lengkap"
                    android:inputType="text"/>
            </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

            <TextView
                android:id="@+id/tv_alamat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spinner_kelamin"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:text="@string/title_depan"/>

            <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
                android:id="@+id/til_alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alamat_title"
                android:layout_marginEnd="8dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toStartOf="@id/til_title_belakang"
                app:startIconTint="@color/grey">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/masukkan_titel_depan"
                    android:inputType="text"/>
            </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

            <TextView
                android:id="@+id/tv_title_belakang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spinner_kelamin"
                app:layout_constraintStart_toStartOf="@id/til_title_belakang"
                android:textStyle="bold"
                android:text="@string/titel_belakang"/>

            <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
                android:id="@+id/til_title_belakang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/til_alamat"
                app:layout_constraintTop_toBottomOf="@id/tv_title_belakang"
                app:endIconMode="clear_text"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:startIconTint="@color/grey">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/masukkan_titel_belakang"
                    android:inputType="text"/>
            </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

            <TextView
                android:id="@+id/tv_tempat_praktik_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/til_alamat"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:text="@string/no_str"/>

            <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
                android:id="@+id/til_tempat_praktik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tempat_praktik_title"
                app:endIconMode="clear_text"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:startIconTint="@color/grey">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/masukkan_nomor_str"
                    android:inputType="text"/>
            </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_lanjut1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cv_form_registrasi"
        app:layout_constraintTop_toBottomOf="@id/cv_form_registrasi"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey"
        android:text="@string/lanjut"/>

</androidx.constraintlayout.widget.ConstraintLayout>