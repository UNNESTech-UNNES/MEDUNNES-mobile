<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pasien.janjiPasien.TambahPasienFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:textColor="@color/fifth_color"
        android:text="@string/tambah_pasien_hint"/>

    <TextView
        android:id="@+id/tv_detail_informasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/third_choice_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/detail_informasi"/>

    <TextView
        android:id="@+id/tv_pasien_nama_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_informasi"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/nama_lenkap"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_nama_title"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="@color/grey">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_lenkap"
            android:inputType="text"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_pasien_hubungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_nama"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/hubungan"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_hubungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_hubungan"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="@color/grey">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_hubungan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hubungan"
            android:inputType="text"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_pasien_tgl_lahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_hubungan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/fifth_color"
        android:textSize="18sp"
        android:text="@string/tanggal_lahir"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_tgl_lahir"
        app:endIconMode="custom"
        app:endIconTint="@color/third_choice_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="@color/grey"
        app:endIconDrawable="@drawable/calendar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_tgl_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/yyyy_mm_dd"
            android:inputType="datetime"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_pasien_jenis_kelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_tgl_lahir"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/jenis_kelamin"/>

    <Spinner
        android:id="@+id/spinner_pasien_jenis_kelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_jenis_kelamin"
        app:layout_constraintBottom_toTopOf="@id/tv_pasien_tb"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/tv_pasien_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_pasien_jenis_kelamin"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/tinggi_badan"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_tb_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_tb"
        app:layout_constraintEnd_toStartOf="@id/tv_cm"
        app:startIconTint="@color/grey">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tinggi_badan"
            android:inputType="number"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/til_pasien_tb_title"
        app:layout_constraintBottom_toBottomOf="@id/til_pasien_tb_title"
        android:layout_marginEnd="16dp"
        android:text="@string/cm"/>

    <TextView
        android:id="@+id/tv_pasien_bb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_tb_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/berat_badan"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_bb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_bb_title"
        app:layout_constraintEnd_toStartOf="@id/tv_cm"
        app:startIconTint="@color/grey">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_bb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/berat_badan"
            android:inputType="number"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/til_pasien_bb"
        app:layout_constraintBottom_toBottomOf="@id/til_pasien_bb"
        android:layout_marginEnd="16dp"
        android:text="@string/kg"/>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_bb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/third_choice_color"
        android:text="@string/simpan"/>

</androidx.constraintlayout.widget.ConstraintLayout>