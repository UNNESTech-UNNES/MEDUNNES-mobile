<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pasien.janjiPasien.TambahPasienFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:textColor="@color/fifth_color"
        android:text="@string/tambah_pasien_hint"/>

    <TextView
        android:id="@+id/tv_detail_informasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/third_choice_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/detail_informasi"/>

    <TextView
        android:id="@+id/tv_pasien_hubungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_informasi"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/hubungan"/>

    <Spinner
        android:id="@+id/spinner_pasien_hubungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_hubungan"
        app:layout_constraintBottom_toTopOf="@id/tv_pasien_nama_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/tv_pasien_nama_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_pasien_hubungan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/nama_lenkap"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_nama_title"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="@color/grey">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_lenkap"
            android:inputType="textEmailAddress"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_pasien_tgl_lahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_nama"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="@color/fifth_color"
        android:textSize="18sp"
        android:text="@string/tanggal_lahir"/>

    <com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout
        android:id="@+id/til_pasien_tgl_lahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_tgl_lahir"
        app:endIconMode="custom"
        app:endIconTint="@color/third_choice_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconTint="@color/grey"
        app:endIconDrawable="@drawable/calendar">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_pasien_tgl_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dd_mm_yyyy"
            android:inputType="datetime"/>
    </com.medunnes.telemedicine.ui.cutomView.CustomTextInputLayout>

    <TextView
        android:id="@+id/tv_pasien_kartu_identitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_pasien_tgl_lahir"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:textColor="@color/fifth_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/unggah_kartu_identitas"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_pasien_kartu_identitas"
        android:layout_width="162dp"
        android:layout_height="108dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pasien_kartu_identitas"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/grey_less_less"
        android:layout_marginTop="8dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/iv_pasien_kartu_identitas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/cloud_upload"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_pasien_kartu_identitas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/third_choice_color"
        android:text="@string/simpan"/>

</androidx.constraintlayout.widget.ConstraintLayout>