<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.pasien.konsultasiPasien.KonsultasiDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_picture"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/person"/>

        <TextView
            android:id="@+id/tv_user_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_user_picture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/nama_lenkap"/>

        <TextView
            android:id="@+id/tv_user_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_user_fullname"
            app:layout_constraintStart_toStartOf="@id/tv_user_fullname"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="@string/rumah_sakit"/>

        <ImageView
            android:id="@+id/iv_medical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_field"
            app:layout_constraintStart_toStartOf="@id/tv_user_fullname"
            android:layout_marginTop="8dp"
            android:src="@drawable/medical"/>

        <TextView
            android:id="@+id/tv_user_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_medical"
            app:layout_constraintTop_toTopOf="@id/iv_medical"
            app:layout_constraintBottom_toBottomOf="@id/iv_medical"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:text="@string/pengalaman_dokter"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="511dp" />

        <ImageView
            android:id="@+id/iv_education"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_medical"
            app:layout_constraintStart_toStartOf="@id/tv_user_fullname"
            android:layout_marginTop="50dp"
            android:src="@drawable/education"/>

        <TextView
            android:id="@+id/tv_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_education"
            app:layout_constraintBottom_toBottomOf="@id/iv_education"
            app:layout_constraintStart_toEndOf="@id/iv_education"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/pendidikan"/>

        <TextView
            android:id="@+id/tv_user_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_education"
            app:layout_constraintStart_toStartOf="@id/tv_education"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="@string/pendidikan_dokter"/>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_education"
            app:layout_constraintStart_toStartOf="@id/tv_user_fullname"
            android:layout_marginTop="16dp"
            android:src="@drawable/place"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_location"
            app:layout_constraintBottom_toBottomOf="@id/iv_location"
            app:layout_constraintStart_toEndOf="@id/iv_education"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/tempat_praktik"/>

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:layout_constraintStart_toStartOf="@id/tv_location"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="@string/tempat_praktik"/>

        <ImageView
            android:id="@+id/iv_str"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_location"
            app:layout_constraintStart_toStartOf="@id/tv_user_fullname"
            android:layout_marginTop="16dp"
            android:src="@drawable/person"/>

        <TextView
            android:id="@+id/tv_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_str"
            app:layout_constraintBottom_toBottomOf="@id/iv_str"
            app:layout_constraintStart_toEndOf="@id/iv_str"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/no_str"/>

        <TextView
            android:id="@+id/tv_user_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_str"
            app:layout_constraintStart_toStartOf="@id/tv_str"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:text="@string/no_str"/>

        <Button
            android:id="@+id/btn_konsultasi_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_user_str"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/app_color"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="@string/konsultasi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>